
#include <stdio.h>
 struct sum {
     int b;
     int total;
 };
 
 struct sum input()
 {
     struct sum i;
     printf("enter the number of elements \n");
     scanf("%d",&i.b);
     return i;
 }
 struct sum compute(struct sum i)
{
    i.total=0;
    for(int c=0;c<=i.b;c++)
    {
        i.total=i.total+c;
    }
    return i;
}
void output(struct sum i)
{
    printf("the total sum is %d", i.total);
}    
int main()
{
    struct sum s;
    s=input();
    s=compute(s);
    output(s);
 }
