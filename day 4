#include<stdio.h>
struct small{
    int n;
    int a[100];
    int less;
};
struct small input()
{
    struct small i;
    printf("enter the number of elements");
    scanf("%d",&i.n);
    printf("enter the elements");
    for(int c=0;c<i.n;c++)
    {
        scanf("%d",&i.a[c]);
    }
    return i;
}
struct small compute(struct small i)
{
   int c=0;
   i.less=i.a[c];
    for(c=0;c<i.n;c++)
   {
       if(i.less>i.a[c])
   {
       i.less=i.a[c];
   }
   }
   return i;
}
void output(struct small i)
{
    printf("the smallest number is %d",i.less);
}
int main()
{
    struct small s;
    s=input();
    s=compute(s);
    output(s);
}
