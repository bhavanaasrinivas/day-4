 #include<stdio.h>
struct num{
    int n;
    int a[100];
};
struct num input()
{
    struct num t;
    printf("enter the number of elements");
    scanf("%d",&t.n);
    return t;
}
struct num readelement(struct num t)
{
    for(int i=0;i<t.n;i++)
    {
        scanf("%d",&t.a[i]);
    }
    return t;
}
void output( struct num t)
{
    for(int i=0;i<t.n;i++)
    printf("%d",t.a[i]);
}
int main()
{
    struct num t;
    t=input();
    t=readelement(t);
    output(t);
}
